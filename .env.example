APP_NAME="Affiliate Locator"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8000/
APP_TIMEZONE=UTC

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# No database required for this application
# DB_CONNECTION=sqlite

# Sessions
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Cache for affiliate data
CACHE_STORE=file
AFFILIATE_CACHE_TTL=3600 # 1 hour

# Dublin office coordinates
DUBLIN_OFFICE_LATITUDE=53.3340285
DUBLIN_OFFICE_LONGITUDE=-6.2535495
AFFILIATE_DISTANCE_LIMIT_KM=100

# Affiliate data file path
AFFILIATE_DATA_FILE=affiliates.txt

# Mail configuration for error notifications
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"
